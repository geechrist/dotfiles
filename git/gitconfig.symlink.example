[user]
	name = AUTHORNAME
	email = AUTHOREMAIL
[core]
  excludesfile = ~/.gitignore
	autocrlf = input
	pager = tig
  editor = vim
  compression = -1
  autocrlf = input
  whitespace = trailing-space,space-before-tab
  precomposeunicode = true
[alias]
	ci = commit
	co = checkout
	br = branch
	st = status
	unstash = stash pop
  pr = pull-request
[color]
  pager = no
	status = auto
	branch = auto
	interactive = auto
	diff = auto
[push]
	default = simple
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[credential]
	helper = GIT_CREDENTIAL_HELPER
[help]
  autocorrect = 1
[grep]
  extendRegexp = true
  lineNumber   = true
